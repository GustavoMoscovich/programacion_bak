    <main class="d-flex justify-content-center align-items-center">
        
        <div class="container">
            <div class="row d-flex justify-content-center">
                <div class="col-10 col-sm-9 col-md-8 col-lg-7 col-xl-6 col-xxl-5 d-flex flex-column">
                    <h3 class="mb-4 text-center">Registro de Usuario</h3>
                    <form id="user" class="d-flex flex-column justify-content-center">
                        <fieldset class="mb-2 text-center">
                            <label for="name" class="form-label m-0">Nombre</label>
                            <input type="text" class="form-control" name="name" id="name" />
                        </fieldset>
                        <fieldset class="mb-2 text-center">
                            <label for="email" class="form-label m-0">Email</label>
                            <input type="email" class="form-control" name="email" id="email" />
                        </fieldset>
                        <fieldset class="mb-2 text-center">
                            <label for="password" class="form-label m-0">Password</label>
                            <input type="password" class="form-control" name="password" id="password" />
                        </fieldset>
                        <span class="d-flex justify-content-evenly">
                            <button id='register' type="submit" class="btn btn-success m-2 ms-0 w-50">Registro !</button>
                        </span>
                    </form>
                </div>
            </div>
        </div>
    </main>
